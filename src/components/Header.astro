---
import { twMerge } from "tailwind-merge"
import Logo from "./Logo.astro"

interface Props {
  twClasses?: string
}

const { twClasses } = Astro.props
---

<header>
  <div class:list={twMerge("flex w-full flex-col items-center", twClasses)}>
    <nav
      class='flex h-16 w-[90%] max-w-7xl flex-row items-center justify-between bg-transparent p-3 ease-in-out animate-delay-1000 sm:h-20 sm:p-4 md:h-24 md:p-6'>
      <a
        href='/'
        class='group flex flex-row items-center gap-4 object-scale-down md:h-14'>
        <Logo
          twClasses='h-8 w-auto fill-nier-200 transition-transform group-hover:scale-105 sm:h-12 md:h-14'
        />
        <div class='flex flex-col items-start'>
          <h1
            class='text-left font-exodus-striped text-base leading-6 text-nier-300 sm:text-xl'>
            Nikita Istomin
          </h1>
          <h2 class='font-helvetica text-xs leading-3 text-nier-400 sm:text-sm'>
            Full-stack Developer
          </h2>
        </div>
      </a>
      <!-- <AuthIndicator /> -->
    </nav>
    <div
      class='flex w-[90%] animate-nav-line-expand flex-row items-center justify-center gap-2 overflow-hidden'>
      <span class='h-[2px] w-[15px] grow-0 bg-nier-400'></span>
      <span class='h-[2px] grow bg-nier-400'></span>
      <span class='h-[2px] w-[15px] grow-0 bg-nier-400'></span>
    </div>
  </div>
</header>
