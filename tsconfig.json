{
  "extends": "astro/tsconfigs/strictest",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "~/*": ["src/*"]
    },
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true
    // "checkJs": true
  },
  "exclude": ["node_modules"]
}
